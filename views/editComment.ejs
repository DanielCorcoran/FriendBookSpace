<% include partials/header %>

<h3><%= comment.author.username %></h3>
<p><%= comment.text %></p>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit this post</h1>

        <div style="width: 30%; margin: 2rem auto;">
            <form action="/feed/<%= status_id %>/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>